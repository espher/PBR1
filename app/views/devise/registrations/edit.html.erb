<%= render "layouts/authenticated" %>
<div id="heder-bar">
  <div class="pageheader">
            
            <div class="pageicon"><span class="iconfa-user"></span></div>
            <div class="pagetitle">
<h2><%= resource.first_name %> <%= resource.last_name%></H2>
            </div>
        </div><!--pageheader-->


    
    <div class="maincontent">
            <div class="maincontentinner">
                <div class="row-fluid">

<div class="span12">
  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put, :class=> 'form-horizontal' }) do |f| %>
  <%= devise_error_messages! %>
                            <form action="editprofile.html" class="editprofileform" method="post" />
                                
                                <div class="widgetbox box-inverse login-information">
                                    <h4 class="widgettitle">Cuenta</h4>
                                    <div class="widgetcontent">
                                        <p>
                                           <%= f.label :email, "Correo Electronico" %>
                                          <%= f.email_field :email, :autofocus => true %>
                                        </p>
                                        <p>
                                              
                                        </p>
                                        <p>
                                            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    Currently waiting confirmation for: <%= resource.unconfirmed_email %>
  <% end %>

  <%= f.label :password, "Nueva Clave" %> <i>(Si no deseas cambiarla dejala en blanco)</i><br />
  <%= f.password_field :password, :autocomplete => "off" %>

  <%= f.label :password_confirmation, "Confirma Nueva Clave" %>
  <%= f.password_field :password_confirmation %>

                                        </p>
                                    </div>
                                </div>
                                
                                
                                <div class="widgetbox box-inverse personal-information">
                                    <h4 class="widgettitle">Informacion Personal</h4>
                                    <div class="widgetcontent">
                                        <p>
                                            <%= f.label :first_name, "Nombre" %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name, "Apellido" %>
  <%= f.text_field :last_name %>

                                        </p>
                                    </div>
                                </div>
                                
                                <div class="widgetbox box-inverse profile-notifications">
                                    <h4 class="widgettitle">Revisa tu Identidad</h4>
                                    <div class="widgetcontent">
                                       <%= f.label :current_password, "Confirma tu Identidad" %> <i>(Es necesario confirmar tu clave antes de realizar cualquier cambio)</i><br />
  <%= f.password_field :current_password %>
                                    </div>
                                </div>
                               <button type="submit" class="btn btn-primary offset4">
    Actualizar
</button>
<% end %>