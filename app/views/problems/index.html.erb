
<%= render "layouts/authenticated" %>
<div id="heder-bar">
<%= link_to 'Crear Problema', url_for(:action => 'new', :controller => 'problems') , :class => "btn btn-primary btn-large pull-right" %>
<h2>Problemas</H2>
</div>

 <table class="table table-striped table-bordered table-condensed table-hover">
<thead>
  <tr>
    <th colspan="1">Nombre</th>
    <th colspan="1">Creado Por</th>
    <th colspan="1">Fecha de Creacion</th>
    <th colspan="1">Fecha de Modificacion</th>
    <th colspan="1">Acciones</th>
  </tr>
</thead>
 <% unless @problem.empty? %>
    <% @problem.each do |problem| %>
      <tr>

        <td><%= problem.name %></td>
        <td><%= problem.department %></td>
        <td><%= problem.created_at %></td>
        <td><%= problem.updated_at %></td>
           
<td>

      <%= link_to(problem, class: "btn btn-mini btn-danger pull-right", :method => :delete) do %>
            Borrar <i class="icon-trash icon-white"></i>
          <% end %>

          <%= link_to(edit_problem_path(problem), class: "btn btn-mini btn-primary pull-right") do %>
            Edit <i class="icon-edit icon-white"></i>     
          
          <% end %>

                 </td>
      </tr>

       
      
    <% end %>
  <% else %>
    <tr>
      <td colspan="0">No a creado ticket</td>
    </tr>
  <% end %>
  </tbody>
</table>





